<% content_for :title, "Contact" %>

<% support_hours_copy = "👋🏼 Hey! We’d love to hear from you. You can either reach out via the form below or just email adam at hwm dot llc. Thanks!" %>

<div class="bg-gray-900 bg-center bg-contain mb-10 rounded-xl md:mb-0 md:rounded-none" style="background-image: url(<%= image_url('bg_hero_contact.png') %>);">
  <div class="flex flex-col max-w-screen-xl mx-auto px-5 py-10 text-center md:mb-10 md:py-20">
    <% if params["type"].present? %>
      <h1 class="font-black font-header leading-none my-5 text-4xl text-white uppercase md:text-6xl">
        Get Started
      </h1>
    <% else %>
      <h1 class="font-black font-header leading-none my-5 text-4xl text-white uppercase md:text-6xl">
        Contact
      </h1>
      <p class="max-w-3xl mx-auto text-white text-xl md:text-2xl">
        <%= support_hours_copy %>
      </p>
    <% end %>
  </div>
</div>

<div class="flex flex-col flex-grow w-full">
  <div class="flex flex-grow items-center justify-center max-w-xl mx-auto w-full">
    <div class="bg-slate-100 p-10 rounded-xl shadow-sm w-full">
      <%= form_with model: @contact, local: true, method: :post do |f| %>
        <% if params["type"].present? %>
          <%= f.label "Type of project", class: "text-slate-400" %>
          <select class="bg-white block border border-slate-300 flex-1 font-bold placeholder-slate-500 mb-6 rounded-md text-slate-700 w-full"
            style="font-size: 18px; padding: 15px;">
            <%= options_for_selections(params["type"]) %>
          </select>
        <% end %>

        <p class="mb-5">
          <%= f.label :name, class: "text-slate-400" %>
          <%= f.text_field :name, required: true, placeholder: "Your name",
            class: "bg-white block border border-slate-300 flex-1 p-3 placeholder-slate-500 mt-0 rounded-md text-slate-900 w-full" %>
        </p>
        <p class="mb-5">
          <%= f.label :email, class: "text-slate-400" %>
          <%= f.text_field :email, required: true, placeholder: "Your email",
            class: "bg-white block border border-slate-300 flex-1 p-3 placeholder-slate-500 mt-0 rounded-md text-slate-900 w-full" %>
        </p>
        <p class="mb-5">
          <%= f.label :message, class: "text-slate-400" %>
          <% if params["type"].present? %>
            <%= f.text_area :message, rows: 5, cols: 40, required: true, class: "bg-white block border border-slate-300 flex-1 mt-0 p-3 placeholder-slate-500 rounded-md text-slate-900 w-full",
              placeholder: "Quickly describe your project" %>
          <% else %>
            <%= f.text_area :message, rows: 5, cols: 40, required: true, class: "bg-white block border border-slate-300 flex-1 mt-0 p-3 placeholder-slate-500 rounded-md text-slate-900 w-full",
              placeholder: "Your comment or question" %>
          <% end %>
        </p>
        <% if params["type"].present? %>
          <p class="text-gray-700 text-lg">
            <strong>Note:</strong> After we receive your inquiry, we’ll reach out to schedule a 15-30 minute call to discuss your project in more detail.
          </p>
        <% end %>
        <div class="hidden">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <div class="flex justify-end">
          <%= f.submit 'Send message', class: 'bg-gray-900 font-black mt-5 px-10 py-5 rounded-lg text-white text-2xl w-full hover:text-white' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
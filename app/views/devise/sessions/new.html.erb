<% content_for :title, "Log in" %>

<div class="flex flex-col flex-grow w-full">
  <div class="pb-8 pt-8 text-center">
    <h1 class="font-extrabold text-3xl tracking-tight text-slate-900 md:text-5xl">
      Log in
    </h1>
  </div>
</div>

<div class="bg-slate-100 max-w-screen-sm mx-auto p-10 pb-5 rounded-xl w-full">
  <%= form_with(model: resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autocomplete: "email", placeholder: true, class: "border-slate-300 p-5 rounded-xl text-xl w-full" %>
    </div>

    <div class="form-group">
      <%= f.button t('.sign_in'), class: "bg-blue-500 font-bold p-5 rounded-xl text-xl text-white w-full" %>
    </div>
    
    <!--
    <div class="form-group text-center">
      <%= t ".sign_up_html", link: link_to("sign up for an account", new_registration_path(resource_name), class: "font-semibold") %>
    </div>
    -->
  <% end %>
</div>

<% content_for :title, 'Articles' %>

<div class="bg-emerald-700 bg-center bg-contain rounded-xl md:rounded-none" style="background-image: url(<%= image_url('bg_hero_articles.png') %>);">
    <div class="flex flex-col max-w-screen-xl mx-auto px-5 py-10 text-center md:mb-10 md:py-20">
        <h1 class="font-black font-header leading-none my-5 text-4xl text-white uppercase md:text-6xl">
            Articles
        </h1>
        <p class="text-white text-xl md:text-2xl">
            Posts about Jumpstart Pro, Campfire, Ruby on Rails, entrepreneurship, and more
        </p>
    </div>
</div>

<div class="divide-y divide-solid max-w-screen-lg mx-auto w-full">
    <% @articles.each do |article| %>
        <div class="mb-5 mx-auto py-10 prose md:prose-lg md:prose-xl text-slate-800">
            <h3 class="text-2xl md:text-4xl font-bold">
                <%= link_to article.title, article, class: "font-black text-black no-underline hover:text-black" %>
            </h3>
            <p class="text-sm">
                <%= link_to article.published_at.strftime("%B %d, %Y"), article, class: "font-normal text-slate-400 no-underline hover:underline" %>
            </p>
            <div class="font-medium">
                <%= article.body %>
            </div>
        </div>
    <% end %>

    <% if @pagy.pages > 1 %>
        <div class="text-center mt-8">
            <%== pagy_nav(@pagy) %>
        </div>
    <% end %>
</div>
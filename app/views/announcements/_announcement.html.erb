<div class="p-4 md:p-10" id="<%= dom_id(announcement) %>">
  <%= link_to announcement_path(announcement), class: "text-slate-400 text-sm font-medium capitalize" do %>
    <%= local_relative_time announcement.published_at, 'weekday-or-date' %>
  <% end %>

  <h2 class="font-semibold text-slate-900 text-lg mb-2"><%= announcement.title %></h2>
  <%= badge announcement.kind.humanize.titleize, class: "mb-2", color: announcement_color(announcement) %>

  <div class="text-slate-700 text-sm">
    <%= announcement.description %>
  </div>
</div>

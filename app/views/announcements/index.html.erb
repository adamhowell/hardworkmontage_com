<div class="container mx-auto max-w-4xl py-10">
  <h1 class="font-black h2 mt-6 text-5xl text-center">
    <%= t(".title") %>
  </h1>
  <p class="mt-2 text-center text-xl text-slate-700"><%= t(".description", name: Jumpstart.config.application_name) %></p>

  <div class="mt-6 flex flex-col rounded-lg divide-y divide-slate-200 bg-white border border-slate-200">
    <%= render @announcements %>

    <% if @announcements.empty? %>
      <div class="p-4 md:p-10"><%= t(".empty_placeholder") %></div>
    <% end %>
  </div>

  <% if @pagy.pages > 1 %>
    <div class="text-center mt-8">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>

<% content_for :title, "Log in code" %>

<div class="flex flex-col flex-grow w-full">
  <div class="pb-8 pt-8 text-center">
    <h1 class="font-extrabold text-3xl tracking-tight text-slate-900 md:text-5xl">
      Log in code
    </h1>
  </div>
</div>

<div class="bg-slate-100 max-w-screen-sm mx-auto p-10 pb-5 rounded-xl w-full">
  <%= form_with(model: resource, as: resource_name, url: login_code_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.text_field :login_code, autocomplete: "Log in code", placeholder: true, class: "border-slate-300 p-5 rounded-xl text-xl w-full" %>
    </div>

    <div class="form-group">
      <%= f.button "Enter 6-digit code", class: "bg-blue-500 font-bold p-5 rounded-xl text-xl text-white w-full" %>
    </div>
    
    <div class="form-group text-center">
      or <%= link_to("log in to your account again", new_session_path(resource_name), class: "font-semibold") %>
    </div>
  <% end %>
</div>
